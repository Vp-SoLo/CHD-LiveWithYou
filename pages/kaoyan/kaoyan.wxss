}
.infoCollection{
  height: 100vh;
  background-color: rgb(197, 204, 207);
  display: flex;
  flex-direction: column;
}
.infoItem{
  display: flex;
  background-color: white;
  height: 8vh;
  margin-bottom: 3vh;
}
input{
  margin: auto;
}
text{
  margin: auto;
}
.btn{
  display: flex;
}
.infoItems{
  display: flex;
  background-color: white;
  height: 15vh;
  margin-bottom: 3vh;
}
textarea{
  height: 15vh;
}
.container{
  height: 100vh;
  width: 750rpx;
}
.title{
  display: flex;
  height: 10vh;
  background-color: rgb(196, 203, 207);
}
.title image{
  height: 90%;
