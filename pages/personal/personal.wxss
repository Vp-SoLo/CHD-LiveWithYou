/* pages/personal/personal.wxss */
.login{
  height: 100vh;
  background:linear-gradient(blue,white);
  margin-top: 0;
}
.loginBtn{
  margin-top: 15vh;
  width: 50vw;
}
.loginImage{
  width: 100vw;
  margin-bottom: 0;
  height: 35vh;
}
.loginedPage{
  height: 100vh;
  background-color: rgba(119, 136, 153, 0.322);
}
.user{
  display: flex;
  height: 15vh;
  background-color: white;
}
.userImage{
  border-radius: 50%;
  width: 22vw;
  border-radius: 50%;
}
.userImage image{
  height: 100%;
  width: 95%;
  position: center;
}
.nickName{
  flex: 1;
  margin: auto auto;
  margin-left: 15vw;
  color: rgb(71, 68, 68);
}
.personalInfo{
  display: flex;
  margin-top: 5vh;
  background-color: white;
  height: 8vh;
}
.personalInfo image{
  height: 100%;
  width: 10vw;
}
.personalInfo text{
  text-align: center;
  color: rgb(71, 68, 68);
  margin: auto;
}
.myTags{
  margin-top:5vh;
  background-color: white;
  height: 50vh;
  display: flex;
  flex-direction: column;
}
.tagsTitle{
  display: flex;
  height: 8vh;
  background-color: white;
}
.tagsTitle image{
  height: 100%;
  width: 10vw;
}
.tagsTitle text{
  text-align: center;
  color: rgb(71, 68, 68);
  margin: auto;
}
.tags{
  background-color: white;
  height: 30vh;
  margin-bottom: 3vh;
}
.unchossen{
  display:flex;
  flex-wrap: wrap;
  /* background-color: orange; */
  height: 70%;
}
.chossen{
  /* background-color: rebeccapurple; */
  height: 60%;
  border-bottom: 10rpx gray solid;
  border-top: 10rpx gray solid;
}
.tagItems{
  border-radius: 15%;
  font-weight: bold;
  font-size: large;
  margin: 10rpx 5rpx;
  height: 40rpx;
}
.btn{
  display: flex;
  height: 15vh;
}
.sub{
  height: 8vh;
}
.showAnother{
  height: 8vh;
  background-color: lightblue;
}
